
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow avatar uploads for any signed-in user to their own folder.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for patient-specific documents.
    // The folder is named after the patient's UID.
    // This rule is simplified to allow any authenticated user to write.
    // Security is enforced by Firestore rules, which control who can read
    // the document's download URL from the database.
    match /documents/{patientId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
