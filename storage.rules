
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow avatar uploads for any signed-in user to their own folder.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for patient-specific documents.
    // The folder is named after the patient's UID.
    match /documents/{patientId}/{document=**} {
      // Allow anyone who is authenticated to read any document.
      // In a real app, you'd restrict this to the patient and authorized staff.
      allow read: if request.auth != null;
      
      // Allow authenticated users to UPLOAD (create) documents.
      // This rule is critical. It checks that the user is signed in
      // and that they are not trying to upload an excessively large file.
      allow create: if request.auth != null && request.resource.size < 10 * 1024 * 1024;

      // Only allow deleting by authorized users (e.g., the patient or staff)
      // This is a placeholder; a real app would have more robust role checks here.
      allow delete: if request.auth != null && request.auth.uid == patientId;
    }

    // Rules for chat attachments
    match /chat_attachments/{conversationId}/{allPaths=**} {
        // Allow read/write only if the user is a participant of the conversation.
        // This requires a Firestore read, which is allowed in Storage rules.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants.hasAny([request.auth.uid]);
    }
  }
}

    