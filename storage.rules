
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow avatar uploads for any signed-in user to their own folder.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true; // Publicly readable
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for patient-specific documents.
    // The folder is named after the patient's UID.
    // The rule is simplified: Any authenticated user can attempt to write.
    // The actual security is handled by the server-side action (`uploadDocumentAction`),
    // which verifies the uploader's permissions and constructs the correct, secure path.
    // This prevents unauthorized users from writing to arbitrary patient folders.
    match /documents/{patientId}/{allPaths=**} {
      allow read: if request.auth != null; // Download requires knowing the URL from Firestore
      allow write: if request.auth != null;
    }
  }
}
